{
  "root": true,
  "env": { "browser": true, "es2020": true },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:jsx-a11y/recommended"
  ],
  "ignorePatterns": ["dist", ".eslintrc.json", "vite.config.ts.*"], // Ignore build output and config files
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["./tsconfig.json", "./tsconfig.node.json"] // Point to your tsconfig files
  },
  "settings": {
    "react": {
      "version": "detect" // Automatically detect React version
    }
  },
  "plugins": [
    "react",
    "@typescript-eslint",
    "jsx-a11y"
    // Consider adding "react-refresh" plugin if using Vite's React plugin with Fast Refresh
  ],
  "rules": {
    // Add or override rules here if needed
    "react/react-in-jsx-scope": "off", // Not needed with React 17+ JSX transform
    "react/prop-types": "off", // Not needed with TypeScript
    "@typescript-eslint/no-explicit-any": "warn" // Warn instead of error for 'any' type
    // Example: Add rule for react-refresh if using it
    // "react-refresh/only-export-components": [
    //   "warn",
    //   { "allowConstantExport": true }
    // ]
  }
}
